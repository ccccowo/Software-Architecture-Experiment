@startuml

package "噪声监测系统" {
    [声级计] as Sensor
    [采集单元] as Collector
    [传输单元] as Transmitter
    [PC端软件] as PCSoftware
    [数据库服务器] as Database
    [报告生成器] as ReportGenerator

    [PC端软件] <|-- [SerialCommunicator]
    [PC端软件] --> [数据分析模块]
    [PC端软件] --> [数据显示模块]
    [PC端软件] --> [报告生成器]

    [采集单元] --> [声级计] : 采集数据
    [采集单元] --> [传输单元] : 发送数据
    [传输单元] --> [PC端软件] : 传输数据

    [PC端软件] --> [数据库服务器] : 存储数据
    [数据库服务器] --> [数据分析模块] : 提供数据
    [数据分析模块] --> [数据显示模块] : 分析结果
    [数据分析模块] --> [报告生成器] : 分析结果
}

@enduml